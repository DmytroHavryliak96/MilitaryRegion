@model IEnumerable<MilitaryRegion.ViewModels.BaseAmountViewModel>
@using MilitaryRegion.Models

@{
    ViewBag.Title = "Адміністрування: кількість воєнних частин";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="center">Менеджмент кількості воєнних частин</h3>
<div class="row">
    <div class="col s8 offset-s2">

        <table class="highlight">
            <thead>
                <tr>
                    <th>Unit</th>
                    <th>Military Bses Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.Unit</td>
                        <td>@item.BaseAmount</td>
                    </tr>
                }
            </tbody>
        </table>


        <a class='btn' href="@Url.Action("Index", "BaseAmount")">Фільтр по арміях</a>

        <a class='btn' href="@Url.Action("GetCorp", "BaseAmount")">Фільтр по корпусах</a>

        <a class='btn' href="@Url.Action("GetDiv", "BaseAmount")">Фільтр по дивізіях</a>

    </div>
</div>

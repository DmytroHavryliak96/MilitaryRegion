@model IEnumerable<MilitaryRegion.ViewModels.WeaponryAmountViewModel>
@using MilitaryRegion.Models

@{
    ViewBag.Title = "Адміністрування: кількість озброєння";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="center">Менеджмент озброєння</h3>
<div class="row">
    <div class="col s8 offset-s2">
        
        <table class="highlight">
            <thead>
                <tr>
                    <th>Military Base ID</th>
                    <th>Military Base Name</th>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>Model</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.MilitaryBaseId</td>
                        <td>@item.MilitaryBaseName</td>
                        <td>@item.WeaponryType</td>
                        <td>@item.Amount</td>
                        <td>@item.Model</td>
                    </tr>
                }
            </tbody>
        </table>


        <a class='btn' href="@Url.Action("Index", "WAmount")">Озброєння всіх військових частин</a>

        <a class='dropdown-trigger btn' href='#' data-target='dropdown7'>Частини, де к-сть озбр. більше 10</a>

        <!-- Dropdown Structure -->
        <ul id='dropdown7' class='dropdown-content'>
            @foreach (var type in (ViewBag.Types as List<Weaponry>))
            {
                <li><a href="@Url.Action("GetMore10", "WAmount", new { typeName = type.Name})">Type = @type.Name</a></li>
            }
        </ul>

        <a class='dropdown-trigger btn' href='#' data-target='dropdown8'>Частини, де немає даного виду озбр.</a>

        <!-- Dropdown Structure -->
        <ul id='dropdown8' class='dropdown-content'>
            @foreach (var type in (ViewBag.Types as List<Weaponry>))
            {
                <li><a href="@Url.Action("GetNone", "WAmount", new { typeName = type.Name})">Type = @type.Name</a></li>
            }
        </ul>

    </div>
</div>




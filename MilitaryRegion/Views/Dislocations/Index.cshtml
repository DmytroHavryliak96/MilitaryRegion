@model IEnumerable<MilitaryRegion.Models.Dislocation>
@using MilitaryRegion.Models

@{
    ViewBag.Title = "Адміністрування: дислокації";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="center">Менеджмент дислокацій. Підрозділи : @ViewBag.CurrentUnit</h3>
<div class="row">
    <div class="col s4 offset-s4">
        <table class="highlight">
            <thead>
                <tr>
                    <th>Dislocation ID</th>
                    <th>City</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.City</td>
                    </tr>
                }
            </tbody>

        </table>

        <!-- Dropdown Trigger -->
        <a class='dropdown-trigger btn' href='#' data-target='dropdown2'>Фільтр по арміях</a>

        <!-- Dropdown Structure -->
        <ul id='dropdown2' class='dropdown-content'>
            @foreach (var army in (ViewBag.Armies as List<Army>))
            {
                <li><a href="@Url.Action("GetDislocationsOfArmy", "Dislocations", new { armyId = army.Id})">Army number = @army.Number</a></li>
            }
        </ul>


        <a class='dropdown-trigger btn' href='#' data-target='dropdown3'>Фільтр по корпусах</a>
        <!-- Dropdown Structure -->
        <ul id='dropdown3' class='dropdown-content'>
            @foreach (var corp in (ViewBag.Corps as List<Corp>))
            {
                <li><a href="@Url.Action("GetDislocationsOfCorp", "Dislocations", new { corpId = corp.Id})">Corp number = @corp.Number</a></li>
            }
        </ul>

        <a class='dropdown-trigger btn' href='#' data-target='dropdown4'>Фільтр по дивізіях</a>

        <!-- Dropdown Structure -->
        <ul id='dropdown4' class='dropdown-content'>
            @foreach (var division in (ViewBag.Divisions as List<Division>))
            {
                <li><a href="@Url.Action("GetDislocationsOfDivision", "Dislocations", new { divisionId = division.Id})">Division Name = @division.Name</a></li>
            }
        </ul>

       


    </div>
</div>

<div class="row">
    <div class="col s4 offset-s4">
        <a class='dropdown-trigger btn' href='#' data-target='dropdown5'>Фільтр по частинах</a>

        <!-- Dropdown Structure -->
        <ul id='dropdown5' class='dropdown-content'>
            @foreach (var militaryBase in (ViewBag.Bases as List<MilitaryBase>))
            {
                <li><a href="@Url.Action("GetDislocationsOfBase", "Dislocations", new { baseId = militaryBase.Id})">Military Base Name = @militaryBase.Name</a></li>
            }
        </ul>

        <a class='btn' href="@Url.Action("Index", "Dislocations")" >Переглянути дислокації округу</a>
    </div>
</div>
